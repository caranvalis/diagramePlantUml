skinparam class {
    BackgroundColor #E0F7FA
    BorderColor #0097A7
}
skinparam linetype ortho

class Referentiel {
    +id : String
    +type : String // profession, secteur, typePiece, statut, etc.
    +libelle : String
    +actif : Boolean
    +dateCreation : Date
    +dateModification : Date
}

class Profession {
    +id : String
    +libelle : String
    +actif : Boolean
}

class SecteurActivite {
    +id : String
    +libelle : String
    +actif : Boolean
}

class TypePiece {
    +id : String
    +libelle : String
    +format : String
    +actif : Boolean
}

class StatutClient {
    +id : String
    +libelle : String
    +actif : Boolean
}

class GestionnaireReferentiel {
    +id : String
    +nom : String
    +prenom : String
}

