class PreEnregistrement {
    - id: String
    - numeroPreEnregistrement: String
    - canalSaisie: CanalSaisie
    - dateCreation: Date
    - statutPreEnregistrement: StatutPreEnregistrement
    - donneesCollectees: String
    - typeClient: TypeClient
    - adresseIP: String
    - userAgent: String
    - sessionId: String
    - dureeSession: Integer
    - nombreTentatives: Integer
    + initier(): Boolean
    + completer(): Boolean
    + valider(): Boolean
    + transformer(): Client
    + sauvegarderBrouillon(): Boolean
    + reprendre(): Boolean
    + expirer(): Boolean
}

class CanalSaisie {
    - id: String
    - nom: String
    - description: String
    - typeCanal: TypeCanal
    - urlAcces: String
    - configuration: String
    - estActif: Boolean
    + configurer(): Boolean
    + activer(): Boolean
    + desactiver(): Boolean
}

enum TypeCanal {
    WEB_PUBLIC
    WEB_INTRA
    MOBILE_APP
    AGENCE_PHYSIQUE
    CENTRE_APPEL
    PARTENAIRE
}

class FormulairePreEnregistrement {
    - id: String
