    - estActif: Boolean
    + genererFormulaire(): String
    + validerSaisie(): Boolean
    + appliquerRegles(): Boolean
}

class DonneePreEnregistrement {
    - id: String
    - preEnregistrement: PreEnregistrement
    - nomChamp: String
    - valeur: String
    - typeChamp: TypeChamp
